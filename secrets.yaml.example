# ESPHome Secrets Configuration
# Copy this file to secrets.yaml and fill in your values
# Command: cp secrets.yaml.example secrets.yaml

# WiFi Credentials
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# Fallback Access Point Password (shown when WiFi connection fails)
ap_password: "YOUR_AP_PASSWORD"

# Home Assistant API Encryption Key
# Generate new key with: openssl rand -base64 32
# Or let ESPHome generate one during first compile
encryption_key: "YOUR_32_BYTE_BASE64_KEY="

# OTA Update Password
# Generate new password with: openssl rand -hex 16
# Or use any secure password
ota_password: "YOUR_OTA_PASSWORD"
